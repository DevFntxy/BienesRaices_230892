extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-sesniprymary Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10 space-y-2")
                each error in errores
                    p(class="animate-fade-out bg-red-100 text-red-700 border border-red-300 rounded-md px-3 py-2 mb-1 font-bold text-sm shadow-md flex items-center")
                        span(class="mr-2")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/CreateAccount" noValidate).space-y-5.px-6
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold(for="nombre") Nombre:
                        input#nombre.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu nombre" type="text" name="nombre" value= usuario ?  usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold(for="email") Correo:
                        input#email.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu correo" type="email" name="email" value= usuario ?  usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold(for="password") Contraseña:
                        input#password.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu contraseña" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold(for="repetir_password") Confirma Contraseña:
                        input#password-confirm.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu contraseña" type="password" name="repetpassword")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline hover:decoration-2 hover:decoration-sesnitercery") ¿Ya tienes cuenta? Inicia sesión
                        a.text-gray-500.text-xs(href='/auth/passwordRecovery' class="hover:underline hover:decoration-2 hover:decoration-sesnitercery") Olvidé mi contraseña...

                    input(class="w-full bg-sesniprymary-700 hover:bg-sesnitercery text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear cuenta")
