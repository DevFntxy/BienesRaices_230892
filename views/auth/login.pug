extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-sesniprymary Bienes
            spam.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold=  page 
    
    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow 
        form(action="").space-y-5.px-6
            div
              label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Correo:
              input#email.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu correo" type ="email" 
              name="email")
            div
              label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Contraseña: 
              input#password.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu contraseña" type ="password" 
              name="password")
            .flex.items-center.justify-between
              a.text-grav-500.text-xs(href="/auth/passwordRecovery" class="hover:underline hover:decoration-2 hover:decoration-sesnitercery") Olvide mi contraseaña...
              a.text-grav-500.text-xs(href="/auth/createAccount" class="hover:underline hover:decoration-2 hover:decoration-sesnitercery") No tienes cuenta?... crea una cuenta
            
            input(class="w-full bg-sesniprymary-700 hover:bg-sesnitercery text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Inicia Sesion")
